<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CreateTripActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New Trip"
        android:id="@+id/textView_create_trip_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trip name"
        android:id="@+id/textView_trip_name"
        android:layout_below="@+id/textView_create_trip_title"
        android:layout_toLeftOf="@+id/textView_create_trip_title"
        android:layout_toStartOf="@+id/textView_create_trip_title"
        android:layout_alignParentLeft="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_new_trip_name"
        android:layout_alignTop="@+id/textView_trip_name"
        android:layout_alignLeft="@+id/textView_create_trip_title"
        android:layout_alignStart="@+id/textView_create_trip_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:id="@+id/textView_new_trip_date"
        android:layout_below="@+id/editText_new_trip_name"
        android:layout_toLeftOf="@+id/editText_new_trip_name"
        android:layout_toStartOf="@+id/editText_new_trip_name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_new_trip_date"
        android:layout_toRightOf="@+id/textView_trip_name"
        android:layout_toEndOf="@+id/textView_trip_name"
        android:layout_below="@+id/editText_new_trip_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friend"
        android:id="@+id/textView_new_trip_friend"
        android:layout_below="@+id/editText_new_trip_date"
        android:layout_alignRight="@+id/textView_new_trip_location"
        android:layout_alignEnd="@+id/textView_new_trip_location"
        android:layout_marginTop="34dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:id="@+id/button_new_trip_save"
        android:onClick="onClickSaveTrip"
        android:layout_alignTop="@+id/button_new_trip_cancel"
        android:layout_alignLeft="@+id/editText_new_trip_friend_location"
        android:layout_alignStart="@+id/editText_new_trip_friend_location" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        android:id="@+id/button_new_trip_cancel"
        android:onClick="cancelTrip"
        android:layout_below="@+id/editText_new_trip_friend_location"
        android:layout_alignLeft="@+id/textView_new_trip_friend"
        android:layout_alignStart="@+id/textView_new_trip_friend"
        android:layout_marginTop="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/textView_new_trip_friend_name"
        android:layout_below="@+id/textView_new_trip_friend"
        android:layout_alignLeft="@+id/editText_new_trip_date"
        android:layout_alignStart="@+id/editText_new_trip_date" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_new_trip_friend_name"
        android:layout_below="@+id/textView_new_trip_friend"
        android:layout_toRightOf="@+id/textView_new_trip_friend_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:id="@+id/textView_new_trip_friend_location"
        android:layout_below="@+id/editText_new_trip_friend_name"
        android:layout_alignRight="@+id/button_new_trip_cancel"
        android:layout_alignEnd="@+id/button_new_trip_cancel" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_new_trip_friend_location"
        android:layout_alignTop="@+id/textView_new_trip_friend_location"
        android:layout_toRightOf="@+id/textView_new_trip_friend_location"
        android:layout_toEndOf="@+id/textView_new_trip_friend_location" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:id="@+id/textView_new_trip_location"
        android:layout_below="@+id/editText_new_trip_date"
        android:layout_toLeftOf="@+id/editText_new_trip_date"
        android:layout_toStartOf="@+id/editText_new_trip_date" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_new_trip_location"
        android:layout_below="@+id/editText_new_trip_date"
        android:layout_toRightOf="@+id/textView_new_trip_friend"
        android:layout_toEndOf="@+id/textView_new_trip_friend" />

</RelativeLayout>
