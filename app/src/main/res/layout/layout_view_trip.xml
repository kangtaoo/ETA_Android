<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CreateTripActivity"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trip name"
        android:id="@+id/textView_view_trip_name_value"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:editable="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: "
        android:id="@+id/textView_view_trip_date"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/textView_view_trip_name_value"
        android:layout_toLeftOf="@+id/textView_view_trip_name_value"
        android:layout_toStartOf="@+id/textView_view_trip_name_value" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date value"
        android:id="@+id/textView_view_trip_date_value"
        android:layout_alignTop="@+id/textView_view_trip_date"
        android:layout_toRightOf="@+id/textView_view_trip_name_value"
        android:layout_toEndOf="@+id/textView_view_trip_name_value" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friend name"
        android:id="@+id/textView_view_trip_friendName"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/textView_view_trip_location"
        android:layout_alignRight="@+id/textView_view_trip_date"
        android:layout_alignEnd="@+id/textView_view_trip_date" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friend name value"
        android:id="@+id/textView_view_trip_friendName_value"
        android:layout_alignTop="@+id/textView_view_trip_friendName"
        android:layout_alignLeft="@+id/textView_view_trip_date_value"
        android:layout_alignStart="@+id/textView_view_trip_date_value" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friend Location"
        android:id="@+id/textView_view_trip_friendLocation"
        android:layout_below="@+id/textView_view_trip_friendName"
        android:layout_alignRight="@+id/textView_view_trip_friendName"
        android:layout_alignEnd="@+id/textView_view_trip_friendName"
        android:layout_marginTop="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location value"
        android:id="@+id/textView_view_trip_friendLocation_value"
        android:layout_alignTop="@+id/textView_view_trip_friendLocation"
        android:layout_alignLeft="@+id/textView_view_trip_friendName_value"
        android:layout_alignStart="@+id/textView_view_trip_friendName_value" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/button_view_trip_ok"
        android:onClick="onClickOK"
        android:layout_below="@+id/textView_view_trip_friendLocation_value"
        android:layout_toRightOf="@+id/textView_view_trip_friendLocation"
        android:layout_toEndOf="@+id/textView_view_trip_friendLocation"
        android:layout_marginTop="38dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:id="@+id/textView_view_trip_location"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/textView_view_trip_date"
        android:layout_toLeftOf="@+id/textView_view_trip_name_value"
        android:layout_toStartOf="@+id/textView_view_trip_name_value" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location value"
        android:id="@+id/textView_view_trip_location_value"
        android:layout_alignTop="@+id/textView_view_trip_location"
        android:layout_alignLeft="@+id/textView_view_trip_date_value"
        android:layout_alignStart="@+id/textView_view_trip_date_value" />

</RelativeLayout>